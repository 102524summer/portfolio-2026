    <script>

        for (let i = 0; i < 20; i++) {
            const star = document.createElement('div');
            star.className = 'star';
            star.style.top = Math.random() * 100 + '%';
            star.style.left = Math.random() * 100 + '%';
            star.style.animationDelay = Math.random() * 2 + 's';
            document.body.appendChild(star);
        }

        let progress = 0;
        const progressBar = document.getElementById('progressBar');
        const percentage = document.getElementById('percentage');
        const hellos = document.querySelectorAll('.hello');
        let currentHello = 0;

        const progressInterval = setInterval(() => {
            progress += 0.4;
            progressBar.style.width = progress + '%';
            percentage.textContent = Math.floor(progress) + '%';

            if (progress >= 100) {
                clearInterval(progressInterval);
                setTimeout(() => {
                    window.location.href = 'page1.html';
                }, 500);
            }
        }, 30);

        setInterval(() => {
            hellos[currentHello].classList.remove('active');
            currentHello = (currentHello + 1) % hellos.length;
            hellos[currentHello].classList.add('active');
        }, 500);

        function skipToPage() {
            window.location.href = 'page1.html';
        }

        document.querySelectorAll('.star').forEach(star => {
            star.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(2.5)';
                this.style.opacity = '1';
                this.style.boxShadow = '0 0 15px rgba(164, 25, 77, 0.8)';
            });
            
            star.addEventListener('mouseleave', function() {
                this.style.transform = '';
                this.style.opacity = '';
                this.style.boxShadow = '';
            });
        });
    </script>
